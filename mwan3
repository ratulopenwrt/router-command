
config globals 'globals'
	option mmx_mask '0x3F00'
	option rtmon_interval '5'

config rule 'https'
	option proto 'tcp'
	option dest_port '443'
	option sticky '1'
	option use_policy 'failover_policy'

config member 'wan_m'
	option interface 'wan'
	option metric '1'
	option weight '1'

config member 'wan6_m'
	option interface 'wan6'
	option metric '1'
	option weight '1'

config member 'wanb_m'
	option interface 'wanb'
	option metric '2'
	option weight '2'

config member 'wanb6_m'
	option interface 'wanb6'
	option metric '2'
	option weight '2'

config member 'wanc_m'
	option interface 'wanc'
	option metric '3'
	option weight '3'

config member 'wanc6_m'
	option interface 'wanc6'
	option metric '3'
	option weight '3'

config policy 'failover_policy'
	list use_member 'wan_m'
	list use_member 'wan6_m'
	list use_member 'wanb_m'
	list use_member 'wanb6_m'
	list use_member 'wanc_m'
	list use_member 'wanc6_m'
	option last_resort 'unreachable'

config interface 'wan'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv4'
	list track_ip '1.1.1.1'
	list track_ip '8.8.8.8'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option timeout '4'
	option interval '5'
	option failure_interval '5'
	option recovery_interval '5'
	option down '5'
	option up '8'
	list flush_conntrack 'ifup'

config interface 'wan6'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv6'
	list track_ip '2606:4700:4700::1111'
	list track_ip '2001:4860:4860::8888'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option timeout '4'
	option interval '5'
	option failure_interval '5'
	option recovery_interval '5'
	option down '5'
	option up '8'
	list flush_conntrack 'ifup'

